<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EcommerceGame</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/all.min.css" />
    @await RenderSectionAsync("Styles", required: false)
    <link rel="stylesheet" href="~/EcommerceGame.styles.css" asp-append-version="true" />
    @*Fonts From Google ==> Lato, Cabin, "Readex Pro"*@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cabin&family=Lato&family=Readex+Pro&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/assets/images/MvcProImgs02.svg"/>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link mainColor fw-500" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-500" asp-area="" asp-controller="Home" asp-action="Games">Games</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-500" asp-area="" asp-controller="Home" asp-action="Privacy">Sale</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav flex-grow-1 ms-sm-5 ms-0 d-sm-flex flex-row gap-3">
                        <li class="nav-item">
                            <a class="nav-link fw-500 socialLink me-sm-2 me-0 rounded-circle d-flex justify-content-center align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fa-brands fa-instagram"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-500 socialLink me-sm-2 me-0 rounded-circle d-flex justify-content-center align-items-center" asp-area="" asp-controller="Home" asp-action="Games">
                                <i class="fa-brands fa-youtube"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-500 socialLink me-sm-2 me-0 rounded-circle d-flex justify-content-center align-items-center" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fa-brands fa-tiktok"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-500 socialLink me-sm-2 me-0 rounded-circle d-flex justify-content-center align-items-center" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fa-brands fa-discord"></i>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex  ms-auto justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link fw-500" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa-regular fa-user"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-500" asp-area="" asp-controller="Home" asp-action="Games"><i class="fa-regular fa-heart"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-500" asp-area="" asp-controller="Home" asp-action="Privacy"><i class="fa-solid fa-cart-shopping"></i></a>
                        </li>
                    </ul>
                </div>
            </div> 

        </nav>
    </header>
    
    <main role="main" class="pb-3">
        @RenderBody()
    </main>


    <footer class="footer text-muted primarybg pt-4">
        <div class="container">
            <div class="row">
                <div class="col-3"> 
                    <div>
                        <img src="~/assets//images/MvcProImgs02.svg"/>
                        <p class="mt-3">The online store of equipment and electronics is one of the leading online stores. The band was released in 25 volumes</p>
                    </div>
                </div>
                <div class="col-3 text-dark">
                    <div>
                        <p class="fs-6 fw-bold">Useful Links</p>
                        <p>About Us</p>
                        <p>Contact Us</p>
                        <p>Sale</p>
                        <p>Blog</p>
                        <p>FAQs</p>
                    </div>
                </div>
                <div class="col-3 text-dark">
                    <div>
                        <p class="fs-6 fw-bold">Games</p>
                        <p>PC</p>
                        <p>PlayStaion 5</p>
                        <p>Xbox Series X|S</p>
                        <p>Nintendo Switch</p>
                    </div>
                </div>
                <div class="col-3 text-dark">
                    <div>
                        <p class="fs-6 fw-bold">Social Links</p>
                        <p>Instagram </p>
                        <p>Twiter</p>
                        <p>YouTube</p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
